<%- include('partials/head') %>
<%- include('partials/navbar') %>



<div class="container landing-page"> 
  <h3>Workout Records</h3>
  <br>
    <div class="table-responsive">
      <table class="table">
        <tr>
          <th>Exercise</th>
          <th class="d-none d-sm-table-cell">Reps</th>
          <th class="d-none d-sm-table-cell">Weight(kg)</th>
          <th id="delete-heading">Delete</th>
        </tr>
        <tr>
          <% for (let i = 0; i < allNotes.length; i += 1) { %> 
          <td><a href="/workoutCreation/<%= allNotes[i].id %>" style="color: darkslategray"><%= allNotes[i].name %></a></td>
          
          <td><%= allNotes[i].reps%></td>
          <td><%= allNotes[i].weight%></td>
          

          <td>
            <form id="delete-button" action="/workoutCreation/<%= allNotes[i].id %>/delete?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-outline" type="submit"><i class="fa fa-trash-alt"></i></button>
            </form></td>
        </tr>
            <% } %>
      </table>
    </div>
</div>

  <div class="row justify-content-center align-items-center" style="height: 80vh">
    <div class="col-12 col-md-10">
      <form class="entry-form-container" action="/workoutCreation/<%= id %> " method="POST" >
        <div class="row">
            <div class="col-md-4">
              <label for="workouts_id">Exercise: </label>
              <select class="form-control" name="exercises_id" id="exercises_id">
                <% workouts.forEach((type) => { %>
                  <option value="<%= type.id %>"><%= type.name %></option>
                  <% }) %>
                </select>
              </div>
        </div>
        <div class="row">
          <div class="form-group">
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="name">Reps: </label>
                <input class="form-control" name="reps" id="reps">
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="name">Weight(kg): </label>
                <input class="form-control" name="weight" id="weight">
              </div>
            </div>
    


        
  
  
        <br><br>
        <button type="submit" class="btn btn-secondary btn-block">Submit</button>
      </form>
    </div>
  </div>
</div>

<%- include ('partials/footer') %>